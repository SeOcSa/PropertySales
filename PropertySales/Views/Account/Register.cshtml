@model RegisterUserViewModel
@{
    ViewBag.Title = "Register";
}
<div class="page-header">
    <h1>Register</h1>
</div>
<form asp-antiforgery="true" method="post" class="form-register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email" class="error form-group"></span>
    </div>
    <div>
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" placeholder="Password" />
        <span asp-validation-for="Password" class="error form-group"></span>
    </div>
    <div>
        <label asp-for="ConfirmPassword" class="control-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password" />
        <span asp-validation-for="ConfirmPassword" class="error form-group"></span>
    </div>
    <div class="form-group">
        <label class="control-label"></label>
        <input type="submit" value="Register" class="btn btn-primary btn-lg btn-block" id="register" />
    </div>
</form>